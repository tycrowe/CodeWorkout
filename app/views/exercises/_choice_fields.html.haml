.nested-fields
  = f.inputs do
    .row.darker-bkg
      .row
        .col-md-3
          = f.input :answer, as: :string,
            label: "Choice text"
      .row
        .col-md-3
          = f.input :value, as: :number,
            label: "Points for this choice"
      .row
        .col-md-3
          = f.input :position, as: :number,
            label: "Position"          
      .row     
        .col-md-3
          = f.input :feedback, as: :string,
            label: "Choice explanation"