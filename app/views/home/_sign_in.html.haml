.list-group
  = link_to user_omniauth_authorize_path(:facebook),
  class: 'btn btn-social btn-facebook list-group-item' do
    %i.fa.fa-facebook
    Sign in with Facebook
  = link_to user_omniauth_authorize_path(:google_oauth2),
  class: 'btn btn-social btn-google-plus list-group-item' do
    %i.fa.fa-google
    Sign in with Google
  = link_to user_omniauth_authorize_path(:cas),
  class: 'btn btn-social btn-vt list-group-item' do
    %span VT
    Sign in with Virginia Tech CAS
  %div.list-group-item
    .yamm-content
      = render '/devise/sessions/new'
